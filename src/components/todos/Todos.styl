.todos
  width 320px

  &__title
    display flex
    flex-direction row
    justify-content space-between
    align-items center

    &-text
      font-size 18px
      font-weight 700

    &-remove-filter
      cursor pointer
      background-color #5a5a5a
      color #fff
      border-radius 2px
      margin 0 4px
      padding 0 2px

  &__container
    width 100%
    min-height 200px

  &__item
    position relative
    padding 4px
    margin 4px 0
    width 100%
    height 60px
    background-color #fff
    border-bottom 1px solid #5a5a5a

    &-delete
      cursor pointer
      position absolute
      right 4px
      top 4px
      background-color #5a5a5a
      color #fff
      padding 2px 4px
      border-radius 3px
      transition all 0.3s
      &:hover
        opacity 0.8


    &-hashtags
      margin 10px 0

    &-hashtag
      cursor pointer
      background-color #3e3434
      color #fff
      border-radius 3px
      padding 2px